	<!-- title -->
	<div data-role="header" data-position="fixed" id="ptitle2"></div>

	<!-- content-->
	<div data-role="content" id="classroom"  data-theme="f" ></div>

	<!-- footer -->
	<div data-role="footer" class="ui-bar" data-position="fixed" id="pfooter2">

	</div>		
</div>
	