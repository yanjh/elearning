<h1>Listing grades</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Gyear</th>
    <th>Status</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @grades.each do |grade| %>
  <tr>
    <td><%= grade.name %></td>
    <td><%= grade.gyear %></td>
    <td><%= grade.status %></td>
    <td><%= grade.description %></td>
    <td><%= link_to 'Show', grade %></td>
    <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
    <td><%= link_to 'Destroy', grade, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

