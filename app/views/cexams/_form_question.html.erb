<%
    if @problem.id.nil?
        stitle = t('problem.create')
        by="add_question"
    else
        stitle = t('question.problem_update')
        by="update_problem"
    end
-%>

<%= form_for @problem,:url=>cexam_path(@cexam,:by=>by,:problem_id=>@problem.id),:method=>:put do |f| %>
<%= f.error_messages %>
<table >
    <%= cell(t("problem.code"),    (f.text_field :pcode))%>
    <%= cell(t("problem.ctype"),   (f.select(:ctype, t("course.types"))+"  "+f.select(:ptype, t("problem.types"))+"  "+f.select(:status, t("problem.stypes")))) %>
    <%= cell(t("g.title"),   (f.text_area :title,:rows=>3,:cols=>30))%>
    <%= cell(t("problem.content"), (f.text_area :content,:rows=>4,:cols=>30))%>
    <%= cell(t("problem.answer"),  (f.text_area :answer,:rows=>1,:cols=>30))%>

    <%= cell("", (submit_tag stitle))%>
</table>
<% end %>
