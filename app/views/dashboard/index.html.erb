<% content_for :header do -%>
	<% if logged_in? %>	
		<%= configatron.site_name %>
	<% else -%>
		<%= configatron.site_name %>-<%= t("site.system_login") %>
	<% end -%>
<% end -%>

<% content_for :sidebar do -%>
	<h2><%= t("site.sidebar") %></h2>
	<ul>
		<li><%= link_to t("site.needhelp"), "#" %></li>
	<% if logged_in? %>	
		<li><a href="#"><%= t("session.log_in") %></a></li>
		<li><a href="#"><%= t("session.sign_up") %></a></li>
	<% else -%>
		<li><a href="#"><%= t("session.log_in") %></a></li>
		<li><a href="#"><%= t("session.sign_up") %></a></li>
	<% end -%>
	</ul>
<% end -%>

<% if logged_in? %>	
	<p><%= t("site.description") %></p>
<% else -%>
	<p><%= render("login") %></p>
<% end -%>



